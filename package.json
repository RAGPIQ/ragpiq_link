{
  "name": "ragpiq-link",
  "version": "2.0.0",
  "description": "Ragpiq Link Desktop App",
  "main": "src/main/index.js",
  "author": "Ragpiq Pty Ltd",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=4096 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "asar": true,
    "appId": "com.ragpiq.desktoplink",
    "productName": "Ragpiq Link",
    "artifactName": "Ragpiq.Link.Setup-${arch}.${ext}",
    "copyright": "Copyright Â© 2025 Ragpiq",
      "asarUnpack": [
        "src/scripts/**",
        "src/scripts/fonts/**"
      ],
    "files": [
      "**/*",
      "!portable-python/mac/Library/Frameworks/3.13/Frameworks/Tcl.framework/PrivateHeaders/**",
      "!**/PrivateHeaders/**",
      "!.git",
      "!.git/**",
      "!.github",
      "!.github/**",
      "!**/._*",
      "!**/*.pyc",
      "!**/*.pyo",
      "!**/.DS_Store",
      "!**/__pycache__/**",
      "!**/*.egg-info/**",
      "!**/test*/**",
      "!**/config-3.13-darwin/**",
      "!**/bin/python3.13",
      "!**/lib/python3.13/config-3.13-darwin/._python.o",
      "**/*.gif",
      "**/*.png",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.tcl",
      "!**/share/**",
      "!**/doc/**"
    ],
    "directories": { "buildResources": "resources" },
    "afterPack": "build/afterPack.js",
    "mac": {
        "target": ["dmg", "zip"],
        "icon": "resources/iconMac.icns",
        "artifactName": "Ragpiq.Link.Setup-${arch}.${ext}",
        "entitlements": "build/entitlements.mac.plist",
        "entitlementsInherit": "build/entitlements.mac.plist",
        "gatekeeperAssess": false,
        "hardenedRuntime": true,
        "category": "public.app-category.productivity",
        "executableName": "Ragpiq Link",
        "extraResources": [
        { "from": "portable-python/mac/Library/Frameworks/3.13", "to": "python/mac/Library/Frameworks/3.13" },
        { "from": "portable-python/mac/libusb/libusb-1.0.dylib", "to": "lib/libusb-1.0.dylib" }
      ],
        "extendInfo": {
            "CFBundleExecutable": "Ragpiq Link",
            "CFBundleName": "Ragpiq Link",
            "CFBundleDisplayName": "Ragpiq Link"
        },
        "singleArchFiles": "{**/Resources/**,Resources/**,Contents/Resources/**}",
        "x64ArchFiles": "{**/Resources/**,Resources/**,Contents/Resources/**,Contents/Resources/python/mac/Library/Frameworks/3.13/lib/python3.13/site-packages/PIL/.dylibs/**}"

    },
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico",
      "extraResources": [
        { "from": "portable-python/win", "to": "python/win" },
        { "from": "portable-python/win/libusb-1.0.dll", "to": "lib/libusb-1.0.dll" }
      ]
    },
    "afterSign": "build/afterSign.js"
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "27.3.11",
    "electron-builder": "24.12.0"
  }
}