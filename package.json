{
  "name": "ragpiq-link",
  "version": "2.0.0",
  "description": "Ragpiq Link Desktop App",
  "main": "src/main/index.js",
  "author": "Ragpiq Pty Ltd",
  "asar": true,
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=4096 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.ragpiq.desktoplink",
    "productName": "Ragpiq Link",
    "artifactName": "Ragpiq.Link.Setup.${ext}",
    "copyright": "Copyright Â© 2025 Ragpiq",
    "extraResources": [
      {
        "from": "portable-python",
        "to": "python"
      },
      {
        "from": "portable-python/mac/libusb/libusb-1.0.dylib",
        "to": "libusb-1.0.dylib"
      }
    ],
    "asarUnpack": [
      "src/scripts",
      "portable-python/mac/Library/Frameworks/Versions/3.13/bin",
      "portable-python/mac/Library/Frameworks/Versions/3.13/lib"
    ],
    "files": [
      "**/*",
      "!portable-python/mac/Library/Frameworks/3.13/Frameworks/Tcl.framework/PrivateHeaders/**",
      "!**/PrivateHeaders/**",
      "!.git",
      "!.git/**",
      "!.github",
      "!.github/**",
      "!**/._*",
      "!**/*.pyc",
      "!**/*.pyo",
      "!**/.DS_Store",
      "!**/__pycache__/**",
      "!**/*.egg-info/**",
      "!**/test*/**",
      "!**/config-3.13-darwin/**",
      "!**/lib-dynload/**",
      "!**/bin/python3.13",
      "!**/lib/python3.13/config-3.13-darwin/._python.o",
      "**/*.gif",
      "**/*.png",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.tcl",
      "!**/share/**",
      "!**/doc/**"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        }
      ],
      "icon": "resources/iconMac.icns",
      "artifactName": "Ragpiq.Link.Setup-${arch}.${ext}",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "category": "public.app-category.productivity",
      "signIgnore": [
      "python/**"
    ],
      "executableName": "Ragpiq Link",
      "extendInfo": {
        "CFBundleExecutable": "Ragpiq Link",
        "CFBundleName": "Ragpiq Link",
        "CFBundleDisplayName": "Ragpiq Link"
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "afterSign": "build/notarize.js"
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^27.1.3",
    "electron-builder": "24.12.0"
  }
}
